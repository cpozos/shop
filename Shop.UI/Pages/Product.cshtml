@page "{name}"
@model Shop.UI.Pages.ProductModel
@{
}

<div>
    <p>@Model.Product.Name</p>
    <p>@Model.Product.Description</p>
    <p>@Model.Product.Price</p>

    <div>
        <label>Stock</label>
        <select>
            @foreach (var item in Model.Product.Stock)
            {
                <option value="@item.Id">item.Description</option>
            }
        </select>
    </div>
</div>